<div class="card-list-containar py-5">
		<%@movies.each do |movie| %>
		<div class="card w-25 mx-auto mt-4 shadow-lg">
			<%= link_to public_movie_path(movie.id) do %><%= image_tag movie.get_image, size: "300x300", class:"card-img-top"; %><%end %>
			<div class="card-body">
				<div class="row">
					<div class="col-2">
						<%= image_tag movie.user.get_profile_image(50,50), class:"mt-3 rounded-circle"; %>
					</div>
					<div class="col-10">
						<p class="card-title"><%= link_to(public_movie_path(movie.id) , class:"text-dark") do %> <strong><i class="far fa-flag"></i> <span><%= movie.title %></span></strong> <%end %></p>
						<p class="card-text">説明：<%= movie.body %></p><span><i class="fas fa-user"></i> By <%= movie.user.nickname %> ｜</span> <span><%= link_to "#{movie.movie_comments.count} コメント", public_movie_path(movie.id), class:"text-dark" %></span>
					</div>
				</div>
			</div>
		</div><%end %>
	</div>


  